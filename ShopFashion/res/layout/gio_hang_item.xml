<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="125dp"
    android:background="@drawable/bg_item"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/image_giohang"
        android:layout_width="84dp"
        android:layout_height="112dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/thumb" />

    <LinearLayout
        android:layout_width="214dp"
        android:layout_height="120dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp" >

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Tên:"
                android:textColor="#f19a18"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tensanpham_giohang"
                android:layout_width="130dp"
                android:layout_height="18dp"
                android:textColor="#f19a18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Giá:"
                android:textColor="#672500"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/gia_giohang"
                android:layout_width="80dp"
                android:layout_height="14dp"
                android:paddingLeft="6dp"
                android:textColor="#672500"
                android:textSize="12dp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="vnđ/1chiếc"
                android:textColor="#672500"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng:"
                android:textColor="#672500"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/soluong"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:numeric="integer"
                android:paddingLeft="5dp"
                android:textColor="#672500"
                android:textSize="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="5dp" >

            <Button
                android:id="@+id/btn_muangay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_xoa"
                android:gravity="center"
                android:text="Xóa"
                android:textColor="#FFFFFF"
                android:textSize="8dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>