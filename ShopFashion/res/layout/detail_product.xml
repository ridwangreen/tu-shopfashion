<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab_bg233"
        android:text="Fashion Shop"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.4dp"
        android:orientation="vertical"
        android:background="@drawable/detail_product1" >

        <TextView
            android:id="@+id/name_detail_product"
            android:layout_width="100dp"
            android:layout_height="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="42dp"
            android:textColor="#672500" />

        <ImageView
            android:id="@+id/img_detail_product"
            android:layout_width="230dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/detail_product3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.4dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/detail_product2"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="9dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="20dp"
                android:layout_height="9dp"
                android:lines="1"
                android:text="Giá:"
                android:textColor="#2576e5"
                android:textSize="8dp" />

            <TextView
                android:id="@+id/detail_price_product"
                android:layout_width="40dp"
                android:layout_height="9dp"
                android:textColor="#2576e5"
                android:textSize="8dp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="9dp"
                android:lines="1"
                android:text="vnđ"
                android:textColor="#2576e5"
                android:textSize="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="9dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="20dp"
                android:layout_height="9dp"
                android:lines="1"
                android:text="Xem:"
                android:textColor="#2576e5"
                android:textSize="8dp" />

            <TextView
                android:id="@+id/detail_visited_product"
                android:layout_width="30dp"
                android:layout_height="9dp"
                android:textColor="#2576e5"
                android:textSize="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Liên hệ:"
                android:textColor="#2576e5"
                android:textSize="8dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="9dp"
                android:text="01683005287. Số 20 ngõ 5, đường Liễu Giai, Ba Đình, Hà Nội"
                android:textColor="#2576e5"
                android:textSize="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Chú ý:"
                android:textColor="#2576e5"
                android:textSize="8dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="9dp"
                android:text="Hàng đã có sẵn các size !!!"
                android:textColor="#2576e5"
                android:textSize="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="142dp"
            android:layout_marginTop="15dp" >

            <Button
                android:id="@+id/btn_detail_giohang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_giohang_select"
                android:paddingRight="9dp"
                android:text="GIỎ HÀNG"
                android:textColor="#FFFFFF"
                android:textSize="8dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_detail_muangay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_muangay"
                android:paddingRight="9dp"
                android:text="MUA NGAY"
                android:textColor="#FFFFFF"
                android:textSize="8dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab_footed" />

</LinearLayout>