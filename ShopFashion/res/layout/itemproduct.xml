<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="120dp"
    android:background="@drawable/bg_item"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/m_img_itemproduct"
            android:layout_width="84dp"
            android:layout_height="112dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/thumb" />     
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linler"
        android:layout_width="214dp"
        android:layout_height="120dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp" >

            <TextView
                android:id="@+id/ten"
                android:layout_width="30dp"
                android:layout_height="16dp"
                android:lines="1"
                android:text="Tên:"
                android:textColor="#f19a18" />

            <TextView
                android:id="@+id/name_itemproduct"
                android:layout_width="130dp"
                android:layout_height="16dp"
                android:textColor="#f19a18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="9dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/price"
                android:layout_width="20dp"
                android:layout_height="9dp"
                android:lines="1"
                android:text="Giá:"
                android:textColor="#672500"
                android:textSize="8dp" />

            <TextView
                android:id="@+id/price_itemproduct"
                android:layout_width="40dp"
                android:layout_height="9dp"
                android:paddingLeft="6dp"
                android:textColor="#672500"
                android:textSize="8dp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="9dp"
                android:lines="1"
                android:text="vnđ"
                android:textColor="#672500"
                android:textSize="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="9dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="20dp"
                android:layout_height="9dp"
                android:lines="1"
                android:text="Xem:"
                android:textColor="#672500"
                android:textSize="8dp" />

            <TextView
                android:id="@+id/visited_itemproduct"
                android:layout_width="20dp"
                android:layout_height="9dp"
                android:paddingLeft="5dp"
                android:textColor="#672500"
                android:textSize="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="18dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Mô tả:"
                android:textColor="#672500"
                android:textSize="8dp" />

            <TextView
                android:id="@+id/txtDes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="9dp"
                android:text="01683005287. Số 20 ngõ 5, đường Liễu Giai, Ba Đình, Hà Nội"
                android:textColor="#672500"
                android:textSize="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp" >

            <Button
                android:id="@+id/btn_itemproduct_giohang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_giohang_select"
                android:paddingRight="9dp"
                android:text="GIỎ HÀNG"
                android:textColor="#FFFFFF"
                android:textSize="8dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_itemmuangay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_muangay"
                android:paddingRight="9dp"
                android:text="MUA NGAY"
                android:textColor="#FFFFFF"
                android:textSize="8dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>