<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="165dp"
                android:text="*"
                android:textColor="#2B81EB"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:text="Thông tin phải nhập"
                android:textColor="#672500" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:text="Thông tin cá nhân"
                android:textColor="#672500" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="2dp"
            android:layout_margin="3dp"
            android:background="#f19a18" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:text="Họ và tên"
                    android:textColor="#672500"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="#2B81EB"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_hoten"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="#C7C7C7"
                    android:lines="1"
                    android:textColor="#672500"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:text="Công ty"
                    android:textColor="#672500"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/edit_congty"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="33dp"
                    android:background="#C7C7C7"
                    android:lines="1"
                    android:textColor="#672500"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:text="Địa chỉ"
                android:textColor="#672500" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="2dp"
            android:layout_margin="3dp"
            android:background="#f19a18" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:text="Địa chỉ"
                    android:textColor="#672500"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="#2B81EB"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_diachi"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:background="#C7C7C7"
                    android:lines="1"
                    android:textColor="#672500"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:text="Tỉnh/Tp"
                    android:textColor="#672500"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="#2B81EB"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="185dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="19dp"
                    android:entries="@array/country_arrays1"
                    android:lines="1" >
                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:text="Quốc gia"
                    android:textColor="#672500"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="#2B81EB"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="185dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="12dp"
                    android:entries="@array/country_arrays2"
                    android:lines="1" >
                </Spinner>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:text="Thông tin liên hệ"
                android:textColor="#672500" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="2dp"
            android:layout_margin="3dp"
            android:background="#f19a18" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:text="Điện thoại"
                    android:textColor="#672500"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="#2B81EB"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_dienthoai"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="6dp"
                    android:background="#C7C7C7"
                    android:lines="1"
                    android:textColor="#672500"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:text="Email"
                    android:textColor="#672500"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="#2B81EB"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_email"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="31dp"
                    android:background="#C7C7C7"
                    android:lines="1"
                    android:textColor="#672500"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp" >

            <Button
                android:id="@+id/btn_call"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/btn_call"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:text="0973622504"
                android:textColor="#FFFFFF"
                android:textSize="8dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_muangay"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="24dp"
                android:background="@drawable/btn_xacnhan"
                android:gravity="center"
                android:text="Xác nhận"
                android:textColor="#FFFFFF"
                android:textSize="8dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>