<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/common_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="125dp"
            android:background="@drawable/bg_item"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image_muangay"
                android:layout_width="84dp"
                android:layout_height="112dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/thumb" />

            <LinearLayout
                android:layout_width="214dp"
                android:layout_height="120dp"
                android:layout_marginLeft="15dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp" >

                    <TextView                      
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="Tên:"
                        android:textColor="#f19a18"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/ten_muangay"
                        android:layout_width="130dp"
                        android:layout_height="18dp"
                        android:textColor="#f19a18" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView                      
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="Giá:"
                        android:textColor="#672500"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/gia_muangay"
                        android:layout_width="80dp"
                        android:layout_height="14dp"
                        android:paddingLeft="6dp"
                        android:textColor="#672500"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="vnđ/1chiếc"
                        android:textColor="#672500"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số lượng:"
                        android:textColor="#672500"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/soluong"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:numeric="integer"
                        android:paddingLeft="5dp"
                        android:textColor="#672500"
                        android:textSize="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="5dp" >

                    <Button
                        android:id="@+id/btn_muangay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_xoa"
                        android:gravity="center"
                        android:text="Xóa"
                        android:textColor="#FFFFFF"
                        android:textSize="8dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="165dp"
                    android:text="*"
                    android:textColor="#2B81EB"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Thông tin phải nhập"
                    android:textColor="#672500" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Thông tin cá nhân"
                    android:textColor="#672500" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="292dp"
                android:layout_height="2dp"
                android:layout_margin="3dp"              
                android:background="#f19a18" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:text="Họ và tên"
                        android:textColor="#672500"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="*"
                        android:textColor="#2B81EB"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_hoten"
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:background="#C7C7C7"
                        android:lines="1"
                        android:textColor="#672500"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:text="Công ty"
                        android:textColor="#672500"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/edit_congty"
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="33dp"
                        android:background="#C7C7C7"
                        android:lines="1"
                        android:textColor="#672500"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Địa chỉ"
                    android:textColor="#672500" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="292dp"
                android:layout_height="2dp"
                android:layout_margin="3dp"              
                android:background="#f19a18" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:text="Địa chỉ"
                        android:textColor="#672500"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="*"
                        android:textColor="#2B81EB"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_diachi"
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="25dp"
                        android:background="#C7C7C7"
                        android:lines="1"
                        android:textColor="#672500"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:text="Tỉnh/Tp"
                        android:textColor="#672500"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="*"
                        android:textColor="#2B81EB"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="185dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="19dp"
                        android:entries="@array/country_arrays1"
                        android:lines="1" >
                    </Spinner>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:text="Quốc gia"
                        android:textColor="#672500"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="*"
                        android:textColor="#2B81EB"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="185dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="12dp"
                        android:entries="@array/country_arrays2"
                        android:lines="1" >
                    </Spinner>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Thông tin liên hệ"
                    android:textColor="#672500" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="292dp"
                android:layout_height="2dp"
                android:layout_margin="3dp"              
                android:background="#f19a18" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:text="Điện thoại"
                        android:textColor="#672500"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="*"
                        android:textColor="#2B81EB"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_dienthoai"
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="6dp"
                        android:background="#C7C7C7"
                        android:lines="1"
                        android:textColor="#672500"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:text="Email"
                        android:textColor="#672500"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="*"
                        android:textColor="#2B81EB"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_email"
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="31dp"
                        android:background="#C7C7C7"
                        android:lines="1"
                        android:textColor="#672500"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp" >

                <Button
                    android:id="@+id/btn_call"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/btn_call"                
                    android:paddingLeft="15dp"
                    android:text="0973622504"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="8dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_xacnhan"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/btn_xacnhan"
                    android:layout_marginLeft="24dp"
                    android:text="Xác nhận"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="8dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>